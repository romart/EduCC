{
    "configurations": {
        "C++ Debug": {
            "adapter": "vscode-cpptools",
            "configuration": {
                "request": "launch",
                "program": "${workspaceRoot}/build/bin/main",
                "args": ["-experimental", "-irDump", "hw.ir.txt", "./test/testData/codegen/my/varargs.c"],
